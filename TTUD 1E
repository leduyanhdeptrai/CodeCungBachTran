#include <bits/stdc++.h>
#define ull unsigned long long
const int MOD = 1e9 + 7;
using namespace std;

long long s;
int n, x;
vector<int> a;
int main()
{
    cin >> n;
    for(int i = 1; i <= n; ++ i){
      cin >> x;
      a.push_back(x);
    }
    for(auto it : a){
        s = (s + it) % MOD;
    }
    cout << s;
    return 0;
}
